<h2>Control Modules</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Unit</th>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @x10modules.each do |x10module| %>
      <tr>
        <td><%= x10module.unit_code %></td>
        <td><%= link_to x10module.name, x10module_path(x10module) %></td>
        <td><%= x10module.description %></td>
        <td>
          <%= link_to 'Edit', edit_x10module_path(x10module), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', x10module_path(x10module), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Macros</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
	  <th>Description</th>
	  <th>Command</th>
	  <th>Actions</th>
	</tr>
  </thead>
</table>

<div class="btn-group">
	<%= link_to 'Add Module', new_x10module_path, :class => 'btn' %>
	<%= link_to 'Create Macro', "#", :class => 'btn' %>
</div>

